# ===========================================
# Gmail OAuth Configuration
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ===========================================
# Flask Configuration
# ===========================================
SESSION_SECRET=generate-a-random-secret-key-here
FLASK_ENV=production

# ===========================================
# JWT Configuration (Shared with Main Backend)
# ===========================================
# This secret MUST match your main backend (api.munish.org)
JWT_SECRET=your-shared-jwt-secret-here
JWT_ALGORITHM=HS256

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-ui.com

# ===========================================
# API Configuration
# ===========================================
PORT=8080
API_VERSION=v1

# ===========================================
# Optional: Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ===========================================
# Database Configuration
# ===========================================
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=portfolio_db

# ===========================================
# Kafka Configuration
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=portfolio_updates
